SELECT DISTINCT ?poster ?title ?person ?personname ?index
WHERE {
  {%include "../../../includes/graphs.inc"%}
  GRAPH ?graph {
    <{{uri}}> a tw:Author ;
      tw:index ?index .
    ?poster tw:hasAgentWithRole <{{uri}}> ;
      dcterms:title ?title .
    ?person tw:hasRole <{{uri}}> ;
      foaf:name ?personname .
  }
}
LIMIT 1
